{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-o",
        "${fileWorkspaceFolder}\\${relativeFileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "&&",
        "${fileWorkspaceFolder}\\${relativeFileDirname}\\${fileBasenameNoExtension}.exe",
        "<",
        "${fileWorkspaceFolder}\\${relativeFileDirname}\\input.txt",
        ">",
        "${fileWorkspaceFolder}\\${relativeFileDirname}\\output.txt"
      ],
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
